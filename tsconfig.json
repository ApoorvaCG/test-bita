{
  "compilerOptions": {
    "module": "esnext",
    "types": ["node", "jest"],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*",
    "./src/**/*.tsx",
    "./src/**/*.ts",
    "src/jest.config.ts"
  ],

  "exclude": ["node_modules"]
}
